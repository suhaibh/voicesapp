<body>
    <div class="center jumbotron">
      <h1>Influence through participation</h1>
    
    
    <div class="row signup-form home-row">
        <h2>Finna hear more?</h2>
        <div class="col-md-6 col-md-offset-3">
          
          <%= form_for(@newsletter_subscription, url: newsletter_subscriptions_path, :html=> {:class => "form-inline"}) do |f| %>
          <%= render 'shared/error_messages' %>
         
          
          <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
          
          <%= f.submit "Sign up", class: 'btn my-btn' %>
          <% end %>
        </div>
    </div>
  
      <div class="row">
        <div class="app_badge">
          <%= link_to image_tag("app_store_badge.png", alt: "Download in the App Store", size:"250x100"), "itms://itunes.apple.com/us/app/apple-store/voices-for-iphone/id965692648?mt=8&uo=4", class: "img-responsive" %>
        </div>
      </div>
    </div>
</body>