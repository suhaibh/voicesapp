    <div class="text-center jumbotron">
      <h1>All politics are local.</h1>
    </div>

    <div class="text-center row">
      
      <h2 class="col-xs-12">Search For Your Representatives</h2>
      
      <div class="col-xs-12 col-xs-offset-0 col-md-6 col-md-offset-3">
        
        <%= form_tag representatives_path, method: :get, class: "form-inline", role: "form" do %>
          <div>
            <%= text_field_tag :city, nil, class: 'form-control', placeholder: 'Enter Your City', required: true %>
            <%= select_tag :state, options_for_select(us_states), class: 'form-control' %>
            <%= submit_tag "Search", class: 'btn my-btn' %>
          </div>
        <% end %>
      </div>
    
    </div>


    <div class=" text-center row signup-form home-row">
        <h2>Finna hear more?</h2>
        <div class="col-xs-12 col-xs-offset-0 col-md-6 col-md-offset-3">
          
          <%= form_for(@newsletter_subscription, url: newsletter_subscriptions_path, :html=> {:class => "form-inline"}) do |f| %>
          <%= render 'shared/error_messages' %>
         
          
          <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
          
          <%= f.submit "Sign up", class: 'btn my-btn' %>
          <% end %>
        </div>
    </div>
  
      <div class="text-center row">
        <div class="app_badge">
          <%= link_to image_tag("app_store_badge.png", alt: "Download in the App Store", size:"250x100"), "itms://itunes.apple.com/us/app/apple-store/voices-for-iphone/id965692648?mt=8&uo=4" %>
        </div>
      </div>
