<%# Location search form %>
   <div class="row text-center">
      <div class="col-xs-12 col-xs-offset-0 col-lg-6 col-lg-offset-3">
        <%= form_tag representatives_path, method: :get, class: "form-inline", role: "form" do %>
          <div>
            <%= text_field_tag :city, nil, class: 'form-control', placeholder: 'Enter Your City', required: true %>
            <%= select_tag :state, options_for_select(us_states), class: 'form-control' %>
            <%= submit_tag "Search", class: 'btn my-btn' %>
          </div>
        <% end %>
      </div>
  </div>

<div class="col-xs-12">
	</br><%= @reps.inspect %></br>
</div>
<% if @reps.any? %>		<%# Check to see if any representatives were found %>
	<h1 class="text-center city-state" data-state="<%= params[:state]%>" data-city="<%= params[:city] %>"> <%= city_state %> Representatives </h1>
	<div class="row text-center congressional-reps">
		<% @reps.each do |rep| %>
			<div class="col-xs-12 col-lg-4 representatives">
				<%= image_tag(portrait(rep), class: "img-rounded rep-portrait") %>
				<h4 class="rep-title col-xs-offset-3 col-xs-6 col-lg-12 col-lg-offset-0"> <%= full_title(rep) %> </h4>
				
				<%# All representative contact links go here adjusts to whether or not rep has social links. Change icon colors %>
				<p class="rep-contact">
					<%= rep_twitter(rep) %>
					<%= rep_facebook(rep) %>
					<%= rep_email(rep) %>
					<%= rep_phone(rep) %>
				</p>
				<p>Term Ends: <%= rep.term_end.to_datetime.strftime('%B %e, %Y') %></p>
			</div>
		<% end %>
	</div>

	<%# add classes to insert stage legislator information %>
	<div class="row text-center state-reps">

	</div>

<%# If no representatives are found, this message will be displayed %>
<% else %>
	<h1 class="text-center">Sorry, couldn't find representatives for <%= city_state %></h1>
<%end%>